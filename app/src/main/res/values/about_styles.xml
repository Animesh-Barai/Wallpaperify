<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LicenseTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/padding_content_default</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Subtitle1</item>
    </style>


    <style name="SeparatorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_primary_variant</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_default</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_large</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Subtitle2</item>
    </style>

    <style name="ContactTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_default</item>
        <item name="android:drawablePadding">@dimen/padding_content_small</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Body2</item>
    </style>


</resources>