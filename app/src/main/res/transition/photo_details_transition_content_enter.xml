<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="sequential">

    <transitionSet
        android:duration="@android:integer/config_shortAnimTime"
        android:interpolator="@android:interpolator/fast_out_slow_in"
        android:transitionOrdering="sequential">

        <autoTransition />
        <targets>
            <target android:targetId="@+id/toolbar"/>
            <target android:targetId="@+id/photo_details_bottom_panel_background_overlay"/>
        </targets>
    </transitionSet>

    <transitionSet
        android:duration="@android:integer/config_shortAnimTime"
        android:interpolator="@android:interpolator/fast_out_slow_in"
        android:transitionOrdering="sequential">

        <transition class="com.transitionseverywhere.extra.Scale" />
        <targets>
            <target android:targetId="@+id/photo_details_floating_main"/>
        </targets>
    </transitionSet>

</transitionSet>