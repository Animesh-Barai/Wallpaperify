<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/collections_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/collections_image"
            app:layout_constraintEnd_toStartOf="@+id/collections_image"
            android:background="@drawable/background_layer_gradient"
            app:layout_constraintStart_toStartOf="@+id/collections_image"
            app:layout_constraintTop_toTopOf="@+id/collections_image" />

        <TextView
            android:id="@+id/collections_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#FFF"
            app:layout_constraintBottom_toTopOf="@+id/collection_created_txt"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="I Like a mans with a beard" />

        <TextView
            android:id="@+id/collections_author_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/ic_point_small"
            android:drawablePadding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="@+id/collection_created_txt"
            app:layout_constraintStart_toEndOf="@+id/collection_created_txt"
            app:layout_constraintTop_toTopOf="@+id/collection_created_txt"
            tools:text="by Kurt Wagner" />

        <TextView
            android:id="@+id/collection_photo_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:drawableStart="@drawable/ic_collections_bookmark_small"
            android:drawablePadding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="@+id/collections_author_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/collections_author_txt"
            tools:text="63 Photos" />

        <TextView
            android:id="@+id/collection_created_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:drawableStart="@drawable/ic_date_small"
            android:drawablePadding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/collections_title_txt"
            tools:text="02/03/2019"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
