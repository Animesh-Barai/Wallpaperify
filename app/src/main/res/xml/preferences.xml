<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Appearance">

        <ListPreference
            android:icon="@drawable/ic_invert_colors"
            android:defaultValue="1"
            android:dialogTitle="@string/preference_option_theme_dialog_title"
            android:entries="@array/ThemeOptions"
            android:entryValues="@array/ThemeValues"
            android:key="@string/preference_option_key_theme"
            app:useSimpleSummaryProvider="true"
            android:title="@string/preference_option_title_dark_theme"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="other"
        android:title="Other">

        <ListPreference
            android:dialogTitle="Download Quality"
            android:entries="@array/DownloadQuality"
            android:defaultValue="raw"
            android:key="@string/preference_option_key_download_quality"
            android:icon="@drawable/ic_cloud_download"
            android:title="@string/preference_option_title_download_quality" />

        <Preference
            android:key="@string/preference_option_key_cache"
            android:icon="@drawable/ic_broom"
            android:title="@string/preference_option_title_clear_cache" />

        <Preference
            android:key="@string/preference_option_key_build"
            android:selectable="false"
            android:title="@string/preference_option_title_build_version" />

    </PreferenceCategory>

</PreferenceScreen>