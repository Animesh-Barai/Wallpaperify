<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ErrorLayout">
        <attr name="message" format="string" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="CompoundDrawableTextView">
        <attr name="compoundDrawableWidth" format="dimension"/>
        <attr name="compoundDrawableHeight" format="dimension"/>
        <attr name="drawableStartVector" format="reference" />
        <attr name="drawableTopVector" format="reference" />
        <attr name="drawableEndVector" format="reference" />
        <attr name="drawableBottomVector" format="reference" />
        <attr name="drawableTint" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="FloatingActionMenuButton">
        <!-- animations -->
        <attr name="menu_translation_time_open" format="integer" />
        <attr name="menu_translation_time_hide" format="integer" />
        <attr name="menu_time_fade_in" format="integer" />
        <attr name="menu_time_fade_out" format="integer" />
        <attr name="main_fab_rotation_time" format="integer" />
        <attr name="main_fab_rotation_degrees" format="integer" />

        <!-- offsets -->
        <attr name="main_fab_margin_right" format="dimension" />
        <attr name="main_fab_margin_bottom" format="dimension" />
        <attr name="option_fab_margin" format="dimension" />

        <!-- main fab -->
        <attr name="main_fab_color_background" format="integer" />
        <attr name="main_fab_color_icon" format="integer" />
        <attr name="main_fab_icon_start" format="reference" />
        <attr name="main_fab_icon_end" format="reference" />

        <!-- option fab -->
        <attr name="option_fab_color_background" format="integer" />
        <attr name="option_fab_color_icon" format="integer" />

        <!-- option fab title -->
        <attr name="option_fab_text_size" format="dimension" />
        <attr name="option_fab_text_color" format="integer" />
        <attr name="option_fab_text_background" format="reference" />
    </declare-styleable>
</resources>